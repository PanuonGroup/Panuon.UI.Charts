<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Panuon.UI.Charts"
                    xmlns:irs="clr-namespace:Panuon.UI.Charts.Internal.Resources">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/Panuon.UI.Charts;component/Templates/ChartLegendTemplate.xaml" />
    </ResourceDictionary.MergedDictionaries>
    
    <Style TargetType="local:ChartLegend">
        <Setter Property="ItemTemplate">
            <Setter.Value>
                <DataTemplate>
                    <StackPanel Margin="5"
                                Orientation="Horizontal">
                        <Rectangle Height="20"
                                   Width="25"
                                   RadiusX="2"
                                   RadiusY="2"
                                   Fill="{Binding Fill}"/>
                        <TextBlock Margin="5,0,0,0"
                                   VerticalAlignment="Center"
                                   Text="{Binding Caption}"/>
                    </StackPanel>
                </DataTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Template"
                Value="{StaticResource {x:Static irs:TemplateKeys.ChartLegendTemplate}}"/>
    </Style>
    
</ResourceDictionary>
