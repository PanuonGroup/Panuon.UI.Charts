<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Panuon.UI.Charts"
                    xmlns:irs="clr-namespace:Panuon.UI.Charts.Internal.Resources"
                    xmlns:ic="clr-namespace:Panuon.UI.Charts.Internal.Controls">

    <ControlTemplate x:Key="{x:Static irs:TemplateKeys.ChartLegendTemplate}"
                     TargetType="local:ChartLegend">
        <Border BorderBrush="{TemplateBinding BorderBrush}"
                BorderThickness="{TemplateBinding BorderThickness}"
                Background="{TemplateBinding Background}">
            <ic:ItemsControl ItemsSource="{TemplateBinding ItemsSource}"
                          ItemTemplate="{TemplateBinding ItemTemplate}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Vertical"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ic:ItemsControl>
        </Border>
    </ControlTemplate>

</ResourceDictionary>
